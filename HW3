// Создаем константы ширины и высоты
let width = 10
let height = 20

// Вычисляем площадь
let area = width * height
print("Площадь сарая: \(area)")

// Вычисляем площадь каждой комнаты
let roomArea = area / 2
print("Площадь одной комнаты: \(roomArea)")

// Вычисляем периметр
let perimeter = 2 * (width + height)
print("Периметр сарая: \(perimeter)")

// Остаток от деления 12 на 5
let remainder = 12 % 5
print("Остаток от 12 деленного на 5: \(remainder)")

// Частоты сердцебиения
let heartRate1 = 75
let heartRate2 = 82
let heartRate3 = 90

// Сумма всех трех сердечных сокращений
let addedHR = heartRate1 + heartRate2 + heartRate3

// Средняя частота сердечных сокращений
let averageHR = addedHR / 3
print("Средняя частота сердечных сокращений (Int): \(averageHR)")

// Те же значения, но типа Double
let heartRate1D = Double(heartRate1)
let heartRate2D = Double(heartRate2)
let heartRate3D = Double(heartRate3)

// Сумма всех трех сердечных сокращений (Double)
let addedHRD = heartRate1D + heartRate2D + heartRate3D

// Средняя частота сердечных сокращений (Double)
let averageHRD = addedHRD / 3
print("Средняя частота сердечных сокращений (Double): \(averageHRD)")

// Количество шагов и цель
let steps: Double = 3467
let goal: Double = 10000

// Процент достижения цели
let percentOfGoal = (steps / goal) * 100
print("Процент достижения цели: \(percentOfGoal)%")

// Начальный баланс
var balance = 0

// Заработок за стрижку газона
balance += 10000
print("Баланс после стрижки газона: \(balance) тенге")

// Заработок за случайные работы
balance += 20000
print("Баланс после случайных работ: \(balance) тенге")

// Трата половины денег на ужин и кино
balance /= 2
print("Баланс после ужина и кино: \(balance) тенге")

// Заработок за мытье окон, сумма утраивается
balance *= 3
print("Баланс после мытья окон: \(balance) тенге")

// Трата 3000 тенге в магазине
balance -= 3000
print("Баланс после покупок в магазине: \(balance) тенге")

// Выражение 10 + 2 * 5
print(10 + 2 * 5)

// Выражение с приоритетом сложения
print((10 + 2) * 5)

// Выражение 4 * 9 - 6 / 2
print(4 * 9 - 6 / 2)

// Выражение с приоритетом вычитания
print((4 * 9) - (6 / 2))
